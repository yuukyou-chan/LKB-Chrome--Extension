{
  "short_name": "My Extension",
  "name": "My Extension",
  "description": "基于react的chrome插件架子",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "app/background.js"
  },
  "action": {
    "default_icon": "img/look-128.png",
    "default_popup": "index.html"
  },
  "icons": {
    "16": "img/look-16.png",
    "48": "img/look-48.png",
    "128": "img/look-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "/css/root.css"
      ],
      "js": []
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "/static/css/content.css",
        "/static/media/*"
      ],
      "matches": []
    }
  ]
}